#algoritma 1

#input nilai awal adalaha ngka yang paling besar
x_awal1 = 10000.0

#input nilai selanjutnya yang merupakan angka yang kecil
x_selanjutnya1 = 0.0001

#melakukan perulangan 0,0001 sebanyak 5 kali, pake underscore karena nilai yang diulangi sama
for _ in range (5):
  x_awal1 += x_selanjutnya1

#cetak hasil
print (f"hasil agoritma 1: {x_awal1}")

# Algoritma 1
# input nilai awal adalah angka yang paling besar
x_1 = 100000

# input nilai selanjutnya yang merupakan angka yang kecil
x_2 = 0.00001

# melakukan perulangan 0.00001 sebanyak 100000 kali, pake _ karna nilai yg diulangi sama
for _ in range (x_1):
  x_1 += x_2

# cetak hasil
print (f"hasil algoritma 1: {x_1}")

# Algoritma 2
totalx = 0.0
# input nilai awal yang merupakan nilai yang paling kecil
x_1 = 0.00001
x_2 = 100000

# melakukan perulangan angka 0.00001 sebanyak 100000 kali
for _ in range(x_2):
  totalx += x_1
